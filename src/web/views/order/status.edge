@let(format = new Intl.NumberFormat('de-DE', {style: 'currency', currency: 'EUR'}))
<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <title>UULM LAN</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/status.css">
</head>

<body>
    <header>
        <h1>UULM LAN</h1>
    </header>    

    <div class="center-absolute">
        <div class="row">
            <div class="panel small">
                <h1>Bestellung</h1>    
                <div class="summary">
                    @each(item in basket)
                    <div>
                        <p>{{item.name}}</p>
                        <p>{{format.format(item.price)}}</p>
                    </div>
                    @end
                </div>
                <p>Total: {{format.format(total)}}</p>
            </div>

            <div class="panel big">
                <h1>Status</h1>
                <h2 id="status-text" class="{{payed ? 'good' : 'bad'}}">{{payed ? 'Bezahlt' : 'Nicht Bezahlt'}}</h2>
                <p class="important">Bitte Ã¼berweise <span>{{format.format(total)}}</span> mit dem Verwendungszweck <span>{{reason}}</span> auf das PayPal Konto <span>{{account}}</span></p>
            </div>
            
        </div>
    </div>

</body>

</html>